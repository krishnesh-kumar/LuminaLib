APP_NAME=LuminaLib
APP_ENV=local
API_PREFIX=/api
LOG_LEVEL=INFO

JWT_SECRET_KEY=change-me
JWT_ALGORITHM=HS256
JWT_ACCESS_EXPIRES_MIN=30
JWT_REFRESH_EXPIRES_DAYS=7

DATABASE_URL=postgresql+psycopg2://postgres:postgres@db:5432/luminalib

STORAGE_PROVIDER=minio
